<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="topbar">
    <div class="brand"><a href="/">CueCube Wholesale</a></div>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/products" class="active">Products</a>
      <a href="/login">Login</a>
    </nav>
  </header>

  <main class="page">
    <h1 class="page-title">CueCube Product Catalog</h1>
    <p>Click a product to view full details.</p>

    <div class="product-grid">
      <% products.forEach(function(p) { %>
        <article class="product-card">
          <img src="<%= p.images[0] %>" alt="<%= p.name %>">
          <h2><%= p.name %></h2>
          <p class="by">by <%= p.brand %></p>
          <p class="price">Price from $<%= p.priceFrom %></p>
          <a class="btn-primary" href="/products/<%= p.id %>">View</a>
        </article>
      <% }) %>
    </div>
  </main>

  <footer class="footer">
    (c) 2025 CueCube Wholesale
  </footer>
</body>
</html>
