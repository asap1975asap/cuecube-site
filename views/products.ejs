<% layout('layout') %>
<h1 class="page-title">CueCube Product Catalog</h1>
<p class="page-subtitle">Click a product card to view full details.</p>

<div class="product-grid">
    <% products.forEach(function(p){ %>
        <div class="product-card">
            <img src="<%= p.variants[0].images[0] %>" alt="<%= p.name %>" class="card-img" />
            <h2 class="card-title"><%= p.name %></h2>
            <p class="card-brand">by <%= p.brand %></p>
            <p class="card-price">Price from $<%= (p.basePrice * 0.72).toFixed(2) %></p>
            <p class="card-text"><%= p.shortText %></p>
            <div class="thumb-strip">
                <% p.variants[0].images.forEach(function(img){ %>
                    <img src="<%= img %>" class="thumb-small" />
                <% }) %>
            </div>
            <a href="/products/<%= p.id %>" class="btn btn-small">View</a>
        </div>
    <% }) %>
</div>
