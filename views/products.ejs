<%-
  include('layout', {
    body: `
      <section class="products-page">
        <h2>CueCube Product Catalog</h2>
        <p>Click a product name to view full details.</p>
        <div class="product-grid">
          <% products.forEach(function(p){ %>
            <article class="product-card">
              <img src="<%= p.images[0] %>" alt="<%= p.name %>" class="product-thumb" />
              <h3><a href="/products/<%= p.id %>"><%= p.name %></a></h3>
              <p class="byline">by <%= p.brand %></p>
              <p class="price-hint">Price from $<%= p.price100.toFixed(2) %></p>
              <div class="thumb-row">
                <% p.images.forEach(function(img){ %>
                  <img src="<%= img %>" class="thumb-mini" />
                <% }); %>
              </div>
              <a href="/products/<%= p.id %>" class="btn small">View</a>
            </article>
          <% }); %>
        </div>
      </section>
    `
  })
%>
