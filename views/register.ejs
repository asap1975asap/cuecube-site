<%- include('layout', { user: null, body: `
  <h2>Register with Invite Code</h2>
  ${error ? `<div class="error">${error}</div>` : ''}
  <form method="POST" action="/register" class="form-card">
    <label>Email</label>
    <input type="text" name="username" required />
    <label>Password</label>
    <input type="password" name="password" required />
    <label>Invite Code</label>
    <input type="text" name="invite" placeholder="CUECUBE2025" required />
    <button type="submit" class="btn full">Create account</button>
  </form>
` }) %>
