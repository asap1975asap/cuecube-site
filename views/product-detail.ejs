<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="topbar">
    <div class="brand"><a href="/">CueCube Wholesale</a></div>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/products" class="active">Products</a>
      <a href="/login">Login</a>
    </nav>
  </header>

  <main class="page detail-page">
    <div class="detail-left">
      <img class="detail-main-img" src="<%= product.images[0] %>" alt="<%= product.name %>" id="main-img">
      <div class="thumb-row">
        <% product.images.forEach(function(img) { %>
          <img class="thumb" src="<%= img %>" alt="" onclick="swapImg('<%= img %>')">
        <% }) %>
      </div>
    </div>

    <div class="detail-right">
      <h1><%= product.name %></h1>
      <p class="by">by <%= product.brand %></p>

      <h3>Wholesale pricing:</h3>
      <p>10+ pcs: $15 per unit</p>
      <p>50+ pcs: $12.75 per unit</p>
      <p>100+ pcs: $10.84 per unit</p>

      <label>
        Quantity (min 10 pcs):
        <input id="qty" type="number" min="10" step="1" value="10" oninput="updateTotal()">
      </label>

      <p>Unit price: $15.00</p>
      <p id="total-line">Total: $150.00</p>

      <a id="order-link" class="btn-primary" href="/order?productId=<%= product.id %>&qty=10">Place order</a>
    </div>
  </main>

  <footer class="footer">
    (c) 2025 CueCube Wholesale
  </footer>

  <script>
    function swapImg(src) {
      var m = document.getElementById("main-img");
      m.src = src;
    }
    function updateTotal() {
      var qty = parseInt(document.getElementById("qty").value || "10", 10);
      if (isNaN(qty) || qty < 10) qty = 10;
      var total = qty * 15;
      document.getElementById("total-line").textContent = "Total: $" + total.toFixed(2);
      var link = document.getElementById("order-link");
      link.href = "/order?productId=<%= product.id %>&qty=" + qty;
    }
  </script>
</body>
</html>
