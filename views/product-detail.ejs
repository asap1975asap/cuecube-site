<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Products - CueCube Wholesale</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <header class="topbar">
    <div class="brand">CueCube Wholesale</div>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <main class="content">
    <h1>CueCube Product Catalog</h1>
    <p>Click a product name to view full details.</p>

    <div class="card-grid">
      <% products.forEach(function(p) { %>
        <div class="card">
          <img src="<%= p.diameters[0].images[0] %>" alt="<%= p.name %>" class="card-img" />
          <h2 class="card-title"><%= p.name %></h2>
          <p class="card-sub">by <%= p.brand %></p>
          <p class="card-price">Price from $10.84</p>
          <p class="card-text"><%= p.shortDesc %></p>

          <a class="btn btn-small" href="/products/<%= p.id %>">View</a>
        </div>
      <% }) %>
    </div>
  </main>

  <footer class="footer">
    &copy; 2025 CueCube Wholesale
  </footer>
</body>
</html>
